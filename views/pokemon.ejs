<h1>You've reached the Favorites Page</h1>



<% if(pokemon.length === 0) { %>
    <h4>No favorites here! Go catch some!</h4>
<% } else { %>
    <% pokemon.forEach((poke) => { %>
      <a href="/pokemon/show/<%= poke.id %>"><h2><%=`${poke.name.charAt(0).toUpperCase()}${poke.name.slice(1)}`%></h2></a>  
    <% })} %> 
